<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.pandorasbox" name="Pandoras Box" version="1.2.2" provider-name="Origin">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.urlresolver"  version="3.0.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
	<summary lang="en">An add-on by Origin</summary>
	<description lang="en">An addon For All</description>
	<disclaimer lang="en">The author neither hosts or stores any content, the author has no affiliation with content hosts</disclaimer>
	<platform>all</platform>
  </extension>
</addon>

    <addon id="repository.pandoras" name="Pandoras Box Repo" version="1.1.3" provider-name="Pansolo">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Pandoras Box Repo">
            <info compressed="false">https://raw.github.com/pansbox/PandorasBoxRepo/master_repo/addons.xml</info>
            <checksum>https://raw.github.com/pansbox/PandorasBoxRepo/master_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.github.com/pansbox/PandorasBoxRepo/master_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>An Addon for all</summary>
            <description>Origin Builds Repo</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
